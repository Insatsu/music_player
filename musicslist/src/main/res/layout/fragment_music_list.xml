<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/music_list_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    tools:context=".presentation.MusicListFragment">

    <EditText
        android:id="@+id/music_list_fragment__et"
        style="@style/music_et_style"
        android:layout_weight="10"
        android:hint="@string/ed_hint"
        android:inputType="text"
        android:paddingHorizontal="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/music_list_fragment__rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90" />

</LinearLayout>